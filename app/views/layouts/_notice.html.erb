<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <% flash.each do |key, value| %>
      <div class="alert alert-primary" role="alert">
        <%= value %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
  </div>
</div>